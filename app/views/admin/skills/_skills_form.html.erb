<h2>List all skills</h2>
<% if !@skills.nil? %>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    </thead>
    <% @skills.each do |skill| %>
      <tbody>
        <tr>
          <td><%= skill.id %></td>
          <td><%= skill.name %></td>
          <td class="form-actions"><%= link_to 'Edit', edit_admin_skill_path(skill),class: "btn btn-mini btn-danger",
                                   method: :get %></td>
          <td class="form-actions"><%= link_to 'Delete', admin_skill_path(skill),class: "btn btn-mini btn-danger",
                                   method: :delete, data: { confirm: "Are you sure?"}, title: skill.name, remote: true %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong><%= flash[:error] %></strong>
  </div>
<% end %>
<% if flash[:success] %> 
  <div class="alert alert-success"> 
    <strong><%= flash[:success] %></strong>
  </div> 
<% end %>