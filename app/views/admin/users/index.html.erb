<% provide(:title, 'All members') %>
<h1>All Members: </h1>
<%= will_paginate %>
<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>User ID</th>
    <th>User Name</th>
    <th>Profile</th>
    <th>Authority</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, [:admin, user] %></td>
        <td><%= user.profile %></td>
        <td><%= user_permission_for user %></td>
        <td>
          <div class="btn-group">
            <a class="btn btn-mini btn-danger dropdown-toggle" data-toggle="dropdown" href="#">
              Action
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Detail", admin_user_path(user)%></li>
              <li><%= link_to "Edit", edit_admin_user_path(user)%></li>
              <li><%= link_to "Delete", admin_user_path(user), method: :delete,
                              data: { confirm: "You sure to delete this account?" }, title: user.name%>
              </li>
            </ul>
          </div>
        </td>
      </tr>
  <% end %>

  </tbody>
</table>
<%= link_to 'Add new user', new_admin_user_path, class: "btn btn-medium btn-info"%>
