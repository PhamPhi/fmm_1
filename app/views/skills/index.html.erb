<h2>List all skills</h2>
<% if !@skills.nil? %>
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
    </thead>
    <% @skills.each do |skill| %>
      <tbody>
        <tr>
          <td><%= skill.id %></td>
          <td><%= skill.name %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% end %>