<% provide(:title, 'Project list') %>
<h1>Project list</h1>
<table class="table table-striped">
   <thead>
    <tr>
      <th>Project ID</th>
      <th>Project Name</th>
      <th>Project Abbreviation</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td><%= project.id %></td>
      <td><%= link_to project.name, project_path(project) %></td>
      <td><%= project.abbreviation %></td>
      <td><%= project.startdate.day %>/ <%= project.startdate.month %>/
			<%= project.startdate.year %></td>
      <td><%= project.enddate.day %>/ <%= project.enddate.month %>/
			<%= project.enddate.year %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
